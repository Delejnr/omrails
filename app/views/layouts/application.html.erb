<!DOCTYPE html>
<html>
	<head>
	  <title>VidStripe</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class="container">
			<% flash.each do |name, msg| %>
				<%= content_tag(:div, msg, class: "alert alert-#{name}") %>
			<% end %>	
		
		<div class="container">			
		
			<%= yield %>	
		

				<div id="back_to_top">
					<%= link_to (image_tag 'back-to-top.png'), '#' %>
				</div>		
		</div><!-- End container -->

		</div>
				<p>
					<%= render 'layouts/footer' %>
				</p>
	</body>
	</html>
