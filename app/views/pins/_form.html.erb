<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert-error" %>
  <%= f.full_error :image_content_type, class: "alert-error" %>
  <table>
    <tr>
      <td>
  <%= f.input :channel_id, :label => "Channel", :collection => current_user.channels, :include_blank => false, :input_html => {:multiple => false} %>
      </td>
      <td>
       <%= link_to 'Add New Channel', new_channel_path %>
      </td>
    </tr>
  </table>
  <table>
    <tr>
      <td>
      	<%= f.input :yt_video_id, label: "Enter the video ID" %>
        <%= f.input :thumb_url, :label => "Thumbnail URL" %>
        <%= f.input :description, as: :text, input_html: { rows: "3" } %>
      </td>
      <td>
        <img src="<%= @pin.thumb_url %>"></img>

      </td>
    </tr>
  </table>
   <% @site = Site.all %>
    <%= f.input :site_id, :label => "Site", :collection => @site, :include_blank => false, :input_html => {:multiple => false} %> 
  

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-danger" %>
  </div>
<% end %>
