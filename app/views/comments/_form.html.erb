<%= simple_form_for(@comment, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  
  	
    <%= f.input :comment, as: :text, input_html: { rows: "3" } %>
  

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-danger" %>
  </div>
<% end %>
